    </ul>
	<h3>  Purchase History: <a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Go Home </a></h3>	
	<hr class="soft"/>
	
			
	<table class="table table-bordered">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Quantity Purchased</th>
				  <th>Purchase Date</th>
                  <th>Price</th>
                  <th>Tax</th>
                  <th>Total</th>
				</tr>
              </thead>
              <tbody>
              
				 <% if(purchase.length!==null){ 
				 for(var i=0;i<purchase.length;i++){ 
				 %>
				<tr>
                  <td> <img width="60" src="<%=purchase[i].p_img%>" alt=""/></td>
                  <td><%=purchase[i].p_name%><br/><%=purchase[i].p_details%></td>
				  <td>
					<%=purchase[i].p_quantity%>
				  </td>
                  <td><%=purchase[i].p_date%></td>
                  <td>$<%=purchase[i].p_cost%></td>
                  <td>$<%=(purchase[i].p_cost*0.125)%></td>
                  <td>$<%=((purchase[i].p_cost+(purchase[i].p_cost*0.125))*purchase[i].p_quantity)%></td>
                </tr>
				<%}%>
				<%}%>
				
            </table>
		
		<h3> Current Bidded Products	</h3>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Quantity</th>
                  <th>Your Bid Amount</th>
                  <th>Bidding Deadline</th>
                  <th>Product Status</th>
				</tr>
              </thead>
              <tbody>
              
				 <% if(bidHistory.length!==null){ 
				 for(var i=0;i<bidHistory.length;i++){ 
				 %>
				<tr>
                  <td> <img width="60" src="<%=bidHistory[i].p_img%>" alt=""/></td>
                  <td><%=bidHistory[i].p_name%><br/><%=bidHistory[i].p_details%></td>
				  <td>
					1
				  </td>
				   <td><%=bidHistory[i].bidding_price%> </td>
                  <td><%=bidHistory[i].bidding_deadline%></td>
                  
                  <%if(bidHistory[i].update_status=="updated"){%>
                  <td>You Won</td>
                  <%}
                  else{%>
                  <td>You are top bidder</td>
                  <%}%>
                  
                </tr>
				<%}%>
				<%}%>
				
            </table>
			
				
	<a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping</a>
